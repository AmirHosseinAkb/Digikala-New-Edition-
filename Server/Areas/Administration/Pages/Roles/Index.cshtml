@model Server.Areas.Administration.Pages.Roles.IndexModel
@{
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@DataDictionaries.UsersList</h3>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="m-b-15">
                                <a id="btnAddUser" class="btn btn-info">@ButtonCaptions.AddNewRole</a>
                            </div>
                            <div class="row m-t-10">
                                <div class="col-sm-12">
                                    <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                        <thead>
                                            <tr role="row">
                                                <th>@DataDictionaries.RoleTitle</th>
                                                <th>@DataDictionaries.RolePermissions</th>
                                                <th>@DataDictionaries.Operations</th>
                                            </tr>
                                        </thead>

                                        <tbody>

                                            @foreach (var role in Model.RoleVm)
                                            {
                                                <tr role="row">
                                                    <td>@role.RoleTitle</td>
                                                    <td>
                                                        <ul>
                                                            @foreach (var permission in role.Permissions)
                                                            {
                                                                <li>@permission</li>
                                                            }
                                                        </ul>
                                                    </td>

                                                    <td>
                                                        <a class="btn btn-primary btn-xs btnEditUser">@ButtonCaptions.Edit</a>
                                                        <a class="btn btn-danger btn-xs">@ButtonCaptions.Delete</a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
