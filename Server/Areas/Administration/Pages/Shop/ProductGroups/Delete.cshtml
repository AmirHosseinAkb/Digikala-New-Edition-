@model ShopManagement.Application.Contracts.ProductGroup.DeleteGroupCommand
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">@DataDictionaries.DeleteGroup</h4>
</div>
<form asp-page="./Index"
      asp-page-handler="Delete"
      data-ajax="true"
      data-action="Refresh"
      enctype="multipart/form-data"
      method="post">
    <div class="modal-body">
        @ConfirmationMessages.DeleteGroupConfirmation
        <hr/>
        <h4>@DataDictionaries.Details</h4>
        <hr/>
        <div class="row">
            <input type="hidden" name="groupId" value="@Model.GroupId"/>
            @if (Model.ImageName != null)
            {
                <div class="col-md-5">
                    <img src="/Products/ProductGroupImages/@Model.ImageName" class="image img-thumbnail" style="max-width: 70%; height: 70%"/>
                </div>
                <div class="col-md-7">
                    <ul>
                        <li>@DataDictionaries.Title : @Model.GroupTitle</li>
                    </ul>
                </div>
            }
            else
            {
                <div class="col-md-7">
                    <ul>
                        <li>@DataDictionaries.Title : @Model.GroupTitle</li>
                    </ul>
                </div>
            }
            
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info waves-effect waves-light">@ButtonCaptions.Delete</button>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@ButtonCaptions.Cancel</button>
    </div>

</form>