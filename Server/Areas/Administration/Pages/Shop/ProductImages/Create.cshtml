@model ShopManagement.Application.Contracts.ProductImage.CreateImageCommand
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">@DataDictionaries.AddNewGroup</h4>
</div>
<form asp-page="./Index"
      asp-page-handler="Create"
      data-ajax="true"
      data-action="Refresh"
      data-callback=""
      enctype="multipart/form-data"
      method="post">
    <div class="modal-body">
        <div class="form-group">
            <input type="hidden" asp-for="ProductId"/>
            <img id="imgAvatar" src="/Products/Images/Product.png" class="image img-thumbnail" style="width: 100%; height: 100%"/>
        </div>
        <div class="form-group">
            <input id="imgInp" asp-for="ProductImage" type="file" class="form-control"/>
            <span asp-validation-for="ProductImage" class="error"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info waves-effect waves-light">@ButtonCaptions.Add</button>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@ButtonCaptions.Cancel</button>
    </div>
</form>

<script src="~/assets/js/library/jquery.validate.min.js"></script>
<script src="~/assets/js/library/jquery.validate.unobtrusive.min.js"></script>

<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgAvatar').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#imgInp").change(function () {
        readURL(this);
    });
</script>